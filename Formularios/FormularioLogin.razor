@using BlazorWeb.Entidades

<div class="d-flex justify-content-center align-items-center" style="height: 100vh; width: 100%;background: #15171E">
    <div class="col-xl-10" style="max-width: 900px;">
        <div class="card rounded-3 text-black">
            <div class="row g-0">
                <div class="col-lg-6">
                    <div class="card-body p-md-5 mx-md-4">

                        <div class="text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                            style="width: 185px;" alt="logo">
                            <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
                        </div>

                        <EditForm Model="@login" OnValidSubmit="ProcesarLogin">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <p>Please login to your account</p>

                            <div class="form-outline mb-4">
                                <InputText id="nombre" @bind-Value="login.Nombre" class="form-control" placeholder="Phone number or email address" />
                                <label class="form-label" for="nombre">Username</label>
                                <ValidationMessage For="@(() => login.Nombre)" />
                            </div>

                            <div class="form-outline mb-4">
                                <InputText id="contrasena" @bind-Value="login.Contrasena" type="password" class="form-control" />
                                <label class="form-label" for="contrasena">Password</label>
                                <ValidationMessage For="@(() => login.Contrasena)" />
                            </div>

                            <div class="text-center pt-1 mb-5 pb-1">
                                <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                    Log in
                                </button>
                            </div>

                            <div class="d-flex align-items-center justify-content-center pb-4">
                                <p class="mb-0 me-2">Don't have an account?</p>
                                <button type="button" class="btn btn-outline-danger">Create new</button>
                            </div>

                            @if (!string.IsNullOrEmpty(mensaje))
                            {
                                <div class="alert alert-info mt-3">@mensaje</div>
                            }

                        </EditForm>

                    </div>
                </div>
                <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                    <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                        <h4 class="mb-4">We are more than just a company</h4>
                        <p class="small mb-0">
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                            tempor incididunt ut labore et dolore magna aliqua...
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    private Login login = new Login();
    private string mensaje = string.Empty;
    private bool isLoading = false;

    [Inject]
    private LoginNegocio LoginService { get; set; }

    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private async Task ProcesarLogin()
    {
        isLoading = true;
        mensaje = string.Empty;

        var resultado = await LoginService.Autenticar(login.Nombre, login.Contrasena);

        if (!string.IsNullOrEmpty(resultado?.Token))
        {
            Console.WriteLine(resultado?.Token);
            await LoginService.GuardarTokenAsync("token", resultado?.Token);
            // Login exitoso
            mensaje = "Login exitoso. Bienvenido, " + resultado.Nombre;
            // Redirige a otra página
            NavigationManager.NavigateTo("/"); // cambia esta ruta según tu app
        }
        else
        {
            mensaje = resultado?.Mensaje ?? "Credenciales incorrectas";
        }

        isLoading = false;
    }
}